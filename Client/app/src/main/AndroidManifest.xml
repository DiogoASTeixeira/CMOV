<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.feup.acme_cafe">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".ui.client.MainActivity"
            android:label="Menu" />
        <activity
            android:name=".ui.client.RegisterActivity"
            android:label="Register" />
        <activity
            android:name=".ui.client.LoginActivity"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.client.DetailsTransactionActivity"
            android:label="Details" />

        <activity
            android:name=".ui.client.ProfileActivity"
            android:label="Profile" />

        <activity
            android:name=".ui.client.TransactionActivity"
            android:label="Transactions" />

        <activity
            android:name=".ui.client.NewTransactionActivity"
            android:label="New Transaction" />

        <activity
            android:name=".ui.client.VoucherActivity"
            android:label="Vouchers" />
    </application>

</manifest>